@model LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null; 
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Yap</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>

<style>
    @@keyframes gradientAnimation {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    body {
        background: linear-gradient(270deg, #8A2BE2, #FF1493, #00BFFF, #20B2AA); 
        background-size: 400% 400%; 
        animation: gradientAnimation 15s ease infinite; /
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        font-family: 'Poppins', sans-serif; 
        color: #333; 
        overflow: hidden; 
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        padding: 20px;
        position: relative; 
        z-index: 1; 
    }

    .card {
        border-radius: 20px; 
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3); 
        overflow: hidden;
        background-color: rgba(255, 255, 255, 0.98);
        border: none;
        max-width: 480px; 
        width: 100%;
        backdrop-filter: blur(5px); 
        transform: translateY(0);
        transition: transform 0.5s ease-out, box-shadow 0.5s ease-out;
    }

    .card:hover {
        transform: translateY(-5px); 
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.4); 
    }

    .card-header {
        background-image: linear-gradient(to right, #8A2BE2, #FF1493); 
        color: white; 
        padding: 25px;
        text-align: center;
        font-weight: 700;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        position: relative;
        overflow: hidden;
    }

    .card-header h3 {
        margin-bottom: 0;
        font-size: 2.2rem; 
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2); 
    }

    .card-body {
        padding: 40px; 
    }

    .form-group label {
        font-weight: 500;
        color: #555;
        margin-bottom: 10px;
        display: block;
        font-size: 1.05rem;
    }

    .form-control {
        border-radius: 10px;
        padding: 14px 18px; 
        border: 1px solid #ddd;
        transition: all 0.4s ease; 
        background-color: #f9f9f9; 
    }

    .form-control:focus {
        border-color: #8A2BE2; 
        box-shadow: 0 0 0 0.3rem rgba(138, 43, 226, 0.2); 
        background-color: #fff; 
        outline: none;
    }

    .btn-primary {
        background-image: linear-gradient(to right, #8A2BE2 0%, #FF1493 100%); 
        border: none;
        border-radius: 10px;
        padding: 15px 30px;
        font-size: 1.2rem; 
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s cubic-bezier(.25,.8,.25,1); 
        box-shadow: 0 7px 15px rgba(0, 0, 0, 0.2); 
        width: 100%;
        color: white; 
    }

    .btn-primary:hover {
        transform: translateY(-3px); 
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        background-image: linear-gradient(to right, #FF1493 0%, #8A2BE2 100%); 
    }

    .form-check-input:checked {
        background-color: #8A2BE2; 
        border-color: #8A2BE2;
    }

    .form-check-label {
        color: #555;
    }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 8px;
        color: #dc3545; 
    }

    .mt-3 p {
        text-align: center;
        color: #666;
        margin-top: 25px;
    }

    .mt-3 a {
        color: #FF1493; 
        text-decoration: none;
        font-weight: 600; 
        transition: color 0.3s ease, text-decoration 0.3s ease;
    }

    .mt-3 a:hover {
        color: #8A2BE2; 
        text-decoration: underline;
    }
</style>

<body>
    <div class="login-container">
        <div class="card">
            <div class="card-header">
                <h3>Hoş Geldiniz!</h3>
            </div>
            <div class="card-body">
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div> <div class="form-group">
                        <label asp-for="Email">E-posta</label> <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi girin" /> <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4"> <label asp-for="Password">Şifre</label> <input asp-for="Password" class="form-control" placeholder="Şifrenizi girin" /> <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check mt-4"> <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberMeCheckbox" />
                        <label class="form-check-label" for="rememberMeCheckbox">Beni Hatırla</label> </div>

                    <button type="submit" class="btn btn-primary mt-5">Giriş Yap</button> </form>
                <div class="mt-3">
                    <p>Hesabınız yok mu? <a asp-controller="Account" asp-action="Register">Şimdi Kayıt Olun!</a></p> </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>