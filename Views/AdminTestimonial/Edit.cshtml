@model KitapProject.DTO.TestimonialDTO.UpdateTestimonialDTO

@{
    ViewData["Title"] = "Referansı Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // Admin layout'unuzu buraya göre ayarlayın
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<style>
    /* Aynı stil kurallarını Create.cshtml'den kopyalayabilirsiniz veya paylaşılan bir CSS dosyasına taşıyabilirsiniz */
    .container {
        padding: 20px;
    }

    h2 {
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 20px;
    }

    hr {
        border-top: 2px solid #e0e0e0;
        margin-bottom: 30px;
    }

    .form-label {
        font-weight: 600;
        color: #34495e;
        margin-bottom: 8px;
    }

    .form-control, .form-select {
        border-radius: 8px;
        border: 1px solid #ced4da;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: #8bb4ff;
            box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
        }

    .text-danger {
        font-size: 0.875em;
        margin-top: 5px;
        display: block;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: background-color 0.2s ease, border-color 0.2s ease, transform 0.2s ease;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: background-color 0.2s ease, border-color 0.2s ease, transform 0.2s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
            transform: translateY(-2px);
        }

    .d-flex.justify-content-end {
        margin-top: 30px;
    }
</style>

<div class="container mt-4">
    <h2>Referansı Düzenle</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" asp-controller="AdminTestimonial" method="post">
                <input type="hidden" asp-for="TestimonialId" /> @* Gizli ID alanı *@

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Ad Soyad</label>
                    <input asp-for="Name" class="form-control" placeholder="Referans verenin adını ve soyadını girin" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="5" placeholder="Referans açıklamasını girin"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Rating" class="form-label">Derecelendirme (1-5)</label>
                    <input asp-for="Rating" type="number" class="form-control" min="1" max="5" placeholder="Derecelendirme girin (1-5 arası)" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="fas fa-sync-alt"></i> Güncelle
                    </button>
                    <a href="/AdminTestimonial/Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}