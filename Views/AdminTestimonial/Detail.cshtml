@model KitapProject.DTO.TestimonialDTO.GetByIdTestimonialDTO

@{
    ViewData["Title"] = "Referans Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // Admin layout'unuzu buraya göre ayarlayın
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<style>
    .container {
        padding: 20px;
    }

    .page-header {
        text-align: center;
        margin-bottom: 40px;
        color: #343a40;
    }

    .page-title {
        font-size: 2.8rem;
        font-weight: 700;
        margin-bottom: 10px;
        color: #2c3e50; /* Koyu mavi tonu */
    }

    .page-subtitle {
        font-size: 1.1rem;
        color: #6c757d;
    }

    .detail-card {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        padding: 40px;
        margin-top: 30px;
    }

    .detail-item {
        margin-bottom: 25px;
    }

    .detail-item label {
        font-weight: 600;
        color: #555;
        display: block;
        margin-bottom: 8px;
        font-size: 1.1rem;
    }

    .detail-item p {
        color: #333;
        font-size: 1.05rem;
        line-height: 1.6;
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        border: 1px solid #e9ecef;
    }

    .detail-item p.description {
        white-space: pre-wrap; /* Uzun metinlerde satır sonlarını korur */
    }

    .rating-stars {
        font-size: 1.3rem;
    }

    .rating-stars .fas.fa-star {
        color: #ffc107; /* Sarı yıldız rengi */
    }

    .rating-stars .far.fa-star {
        color: #e0e0e0; /* Boş yıldız rengi */
    }

    .button-group {
        display: flex;
        justify-content: flex-end;
        gap: 15px;
        margin-top: 40px;
    }

    .btn-action {
        padding: 0.8rem 1.8rem;
        border-radius: 8px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: background-color 0.2s ease, transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn-edit {
        background-color: #ffc107;
        color: #212529;
        border: none;
    }
    .btn-edit:hover {
        background-color: #e0a800;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 193, 7, 0.3);
    }

    .btn-back {
        background-color: #6c757d;
        color: white;
        border: none;
    }
    .btn-back:hover {
        background-color: #5a6268;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(108, 117, 125, 0.3);
    }
</style>

<div class="container">
    <div class="page-header">
        <h1 class="page-title">Referans Detayı</h1>
        <p class="page-subtitle">Seçili referansın tüm bilgilerini inceleyin.</p>
    </div>

    <div class="detail-card">
        <div class="row">
            <div class="col-md-12">
                <div class="detail-item">
                    <label>Referans ID:</label>
                    <p>@Model.TestimonialId</p>
                </div>
                <div class="detail-item">
                    <label>Ad Soyad:</label>
                    <p>@Model.Name</p>
                </div>
                <div class="detail-item">
                    <label>Açıklama:</label>
                    <p class="description">@Model.Description</p>
                </div>
                <div class="detail-item">
                    <label>Derecelendirme:</label>
                    <p>
                        <span class="rating-stars">
                            @for (int i = 0; i < Model.Rating; i++)
                            {
                                <i class="fas fa-star"></i>
                            }
                            @for (int i = Model.Rating; i < 5; i++)
                            {
                                <i class="far fa-star"></i>
                            }
                        </span>
                        (@Model.Rating / 5)
                    </p>
                </div>
            </div>
        </div>

        <div class="button-group">
            <a href="/AdminTestimonial/Edit/@Model.TestimonialId" class="btn-action btn-edit">
                <i class="fas fa-edit"></i> Düzenle
            </a>
            <a href="/AdminTestimonial/Index" class="btn-action btn-back">
                <i class="fas fa-arrow-left"></i> Geri Dön
            </a>
        </div>
    </div>
</div>

@section Scripts {
}