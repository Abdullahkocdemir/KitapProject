@model KitapProject.DTO.CategoryDTO.UpdateCategoryDTO

@{
    ViewData["Title"] = "Kategori Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-container">
    <div class="header-section">
        <h1 class="page-title">Kategori Güncelleme</h1>
        <p class="page-subtitle">Mevcut kategori bilgilerini güncelleyin ve kaydedin.</p>
    </div>

    <div class="form-card">
        <form asp-action="Update" asp-controller="AdminCategory" method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors mb-4"></div>

            <input type="hidden" asp-for="CategoryId" />

            <div class="form-group">
                <label asp-for="Name">Kategori Adı</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Kategori adını girin">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Icon">Kategori İkonu (Font Awesome)</label>
                <div class="input-group">
                    <input type="text" asp-for="Icon" class="form-control" id="categoryIconInput" placeholder="Örn: fas fa-book veya fab fa-angular">
                    <div class="input-group-append">
                        <span class="input-group-text" id="iconPreview">
                            @if (!string.IsNullOrEmpty(Model.Icon))
                            {
                                <i class="@Model.Icon"></i>
                            }
                            else
                            {
                                <i class="fas fa-question-circle" title="İkon Önizlemesi"></i>
                            }
                        </span>
                    </div>
                </div>
                <small class="form-text text-muted">Font Awesome 5 veya üzeri ikon sınıflarını kullanabilirsiniz.</small>
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Açıklaması</label>
                <input type="text" asp-for="Description" class="form-control" placeholder="Kategori açıklamasını girin">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <a href="/AdminCategory/Index" class="btn btn-secondary-outline">İptal</a>
                <button type="submit" class="btn btn-primary-gradient">
                    <i class="fas fa-save"></i> Güncelle
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <style>
       

        :root {
            --primary-color: #007bff; 
            --primary-light: #e0f2ff;
            --primary-dark: #0056b3;
            --secondary-color: #6c757d; 
            --success-color: #28a745;
            --danger-color: #dc3545;
            --warning-color: #ffc107;
            --background-light: #f8f9fa; 
            --card-background: #ffffff; 
            --border-color: #e9ecef; 
            --text-primary: #343a40; 
            --text-secondary: #6c757d; 

            --shadow-sm: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            --shadow-md: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 1rem 3rem rgba(0, 0, 0, 0.175);
            --border-radius-sm: 0.5rem;
            --border-radius-md: 1rem;
            --border-radius-lg: 1.5rem;
        }

        .input-group {
            display: flex;
            align-items: center;
        }

            .input-group > .form-control {
                flex: 1;
                border-top-right-radius: 0;
                border-bottom-right-radius: 0;
            }

        .input-group-append .input-group-text {
            background-color: var(--background-light);
            border: 1px solid var(--border-color);
            border-left: none;
            padding: 0.85rem 1.25rem;
            border-top-right-radius: var(--border-radius-sm);
            border-bottom-right-radius: var(--border-radius-sm);
            font-size: 1.1rem; 
            color: var(--text-secondary);
        }

        body {
            font-family: 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background-color: var(--background-light);
            color: var(--text-primary);
            line-height: 1.6;
        }

        .page-container {
            max-width: 1000px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .header-section {
            text-align: center;
            margin-bottom: 40px;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 10px;
            letter-spacing: -0.05rem;
        }

        .page-subtitle {
            font-size: 1.1rem;
            color: var(--text-secondary);
            margin-bottom: 0;
        }

        .form-card {
            background-color: var(--card-background);
            border-radius: var(--border-radius-lg);
            box-shadow: var(--shadow-md);
            padding: 40px;
            border: 1px solid var(--border-color);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

            .form-group label {
                display: block;
                font-weight: 600;
                margin-bottom: 0.6rem;
                color: var(--text-primary);
                font-size: 0.95rem;
            }

        .form-control, .form-select {
            width: 100%;
            padding: 0.85rem 1.25rem;
            border: 1px solid var(--border-color);
            border-radius: var(--border-radius-sm);
            font-size: 0.95rem;
            color: var(--text-primary);
            background-color: #fff;
            transition: all 0.2s ease-in-out;
            box-shadow: inset 0 1px 2px rgba(0,0,0,.04);
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
                outline: none;
            }

        .textarea-auto-resize {
            resize: vertical;
            min-height: 100px;
            overflow: hidden;
        }

        .validation-summary-errors {
            color: var(--danger-color);
            background-color: rgba(220, 53, 69, 0.08);
            border: 1px solid rgba(220, 53, 69, 0.2);
            border-radius: var(--border-radius-sm);
            padding: 1rem;
            text-align: center;
            font-weight: 500;
            margin-bottom: 2rem;
        }

            .validation-summary-errors ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .validation-summary-errors li {
                margin-bottom: 0.5rem;
            }

        .text-danger {
            font-size: 0.85rem;
            color: var(--danger-color);
            margin-top: 0.25rem;
            display: block;
        }

        .toggle-switch-group {
            display: flex;
            align-items: center;
            margin-top: 1.8rem;
            margin-bottom: 1.8rem;
        }

        .toggle-switch-input {
            appearance: none;
            width: 50px;
            height: 28px;
            background-color: var(--secondary-color);
            border-radius: 14px;
            position: relative;
            cursor: pointer;
            outline: none;
            transition: background-color 0.3s ease;
            box-shadow: inset 0 1px 2px rgba(0,0,0,.1);
            margin-right: 15px;
        }

            .toggle-switch-input:checked {
                background-color: var(--success-color);
            }

            .toggle-switch-input::before {
                content: '';
                position: absolute;
                width: 24px;
                height: 24px;
                border-radius: 50%;
                background-color: white;
                top: 2px;
                left: 2px;
                transition: transform 0.3s ease, background-color 0.3s ease;
                box-shadow: 0 1px 3px rgba(0,0,0,.15);
            }

            .toggle-switch-input:checked::before {
                transform: translateX(22px);
            }

        .toggle-switch-label {
            font-weight: 500;
            color: var(--text-primary);
            cursor: pointer;
            font-size: 0.95rem;
        }

        .image-upload-section {
            margin-top: 2.5rem;
            margin-bottom: 2rem;
        }

        .img-preview {
            max-width: 180px;
            height: auto;
            border-radius: var(--border-radius-sm);
            border: 1px solid var(--border-color);
            box-shadow: var(--shadow-sm);
            margin-bottom: 1.2rem;
            display: block;
        }

        .existing-image {
            margin-bottom: 1.5rem;
        }

        .new-image-label {
            margin-top: 1.5rem;
            margin-bottom: 1rem;
            display: block;
            font-weight: 600;
        }

        .file-input-label {
            display: block;
            margin-top: 1.5rem;
            margin-bottom: 0.6rem;
            font-weight: 600;
            font-size: 0.95rem;
            color: var(--text-primary);
        }

        .form-control-file {
            display: block;
            width: 100%;
            padding: 0.6rem 0;
            border: 1px solid var(--border-color);
            border-radius: var(--border-radius-sm);
            background-color: #fcfcfc;
            color: var(--text-secondary);
            font-size: 0.95rem;
            cursor: pointer;
            box-shadow: inset 0 1px 2px rgba(0,0,0,.04);
        }

            .form-control-file:hover {
                border-color: var(--primary-color);
            }

        .form-text {
            font-size: 0.8rem;
            color: var(--text-secondary);
            margin-top: 0.5rem;
            display: block;
        }

        .form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
            margin-top: 2.5rem;
            padding-top: 2rem;
            border-top: 1px solid var(--border-color);
        }

        .btn {
            padding: 0.85rem 1.75rem;
            border-radius: var(--border-radius-sm);
            font-weight: 600;
            font-size: 0.95rem;
            cursor: pointer;
            transition: all 0.2s ease-in-out;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn-primary-gradient {
            background: linear-gradient(45deg, var(--primary-color), var(--primary-dark));
            color: white;
            border: none;
            box-shadow: var(--shadow-sm);
        }

            .btn-primary-gradient:hover {
                opacity: 0.9;
                transform: translateY(-1px);
                box-shadow: var(--shadow-md);
                color: white;
            }

        .btn-secondary-outline {
            background-color: transparent;
            color: var(--secondary-color);
            border: 1px solid var(--secondary-color);
            box-shadow: none;
        }

            .btn-secondary-outline:hover {
                background-color: var(--secondary-color);
                color: white;
                border-color: var(--secondary-color);
                transform: translateY(-1px);
                box-shadow: var(--shadow-sm);
            }

        @@media (max-width: 768px) {
            .form-card {
                padding: 25px;
            }

            .page-title {
                font-size: 2rem;
            }

            .page-subtitle {
                font-size: 1rem;
            }

            .form-actions {
                flex-direction: column;
                gap: 0.8rem;
            }

            .btn {
                width: 100%;
            }
        }
    </style>
}