@{
    ViewData["Title"] = "Kullanıcı Profili";
}

<h1>Kullanıcı Profili</h1>

<p>Bu bilgiler: <strong>@ViewBag.Source</strong> üzerinden geldi.</p>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@ViewBag.FullName (@ViewBag.UserName)</h5>
        <p class="card-text"><strong>E-posta:</strong> @ViewBag.Email</p>
        <p class="card-text"><strong>Kayıt Tarihi:</strong> @ViewBag.CreatedAt</p>
        <p class="card-text"><strong>Kullanıcı ID:</strong> @ViewBag.UserId</p>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Ana Sayfaya Dön</a>
</div>