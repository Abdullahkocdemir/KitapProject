@model List<KitapProject.Entities.AppUser>

@{
    ViewData["Title"] = "Tüm Kullanıcılar";
}

<h1>Kayıtlı Kullanıcılar</h1>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info" role="alert">
        @ViewBag.Message
    </div>
}

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped mt-4">
        <thead>
            <tr>
                <th>Ad Soyad</th>
                <th>E-posta</th>
                <th>Kullanıcı Adı</th>
                <th>Kayıt Tarihi</th>
                <th>ID (Redis Anahtarı)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.UserName</td>
                    <td>@user.CreatedAt.ToShortDateString()</td>
                    <td>@user.Id</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Gösterilecek kayıtlı kullanıcı bulunmamaktadır.</p>
}

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Ana Sayfaya Dön</a>
</div>